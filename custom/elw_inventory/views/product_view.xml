<odoo>
  <data>

    <record id="product_product_product_tree_view_inherit" model="ir.ui.view">
      <field name="name">product.product.product.tree.view.inherit</field>
      <field name="model">product.product</field>
      <field name="inherit_id" ref="product.product_product_tree_view" />
      <field name="arch" type="xml">
        <xpath expr="//field[@name='default_code']" position="attributes">
          <attribute name="string">Part Number</attribute>
        </xpath>
      </field>
    </record>

    <record id="product_product_template_tree_view_inherit" model="ir.ui.view">
      <field name="name">product.product.template.tree.view.inherit</field>
      <field name="model">product.template</field>
      <field name="inherit_id" ref="product.product_template_tree_view" />
      <field name="arch" type="xml">
        <xpath expr="//field[@name='default_code']" position="attributes">
          <attribute name="string">Part Number</attribute>
        </xpath>
      </field>
    </record>

    <record id="product_product_template_only_form_view_inherit" model="ir.ui.view">
      <field name="name">product.product.template.only.form.view.inherit</field>
      <field name="model">product.template</field>
      <field name="inherit_id" ref="product.product_template_only_form_view" />
      <field name="arch" type="xml">
        <xpath expr="//page[@name='general_information']//field[@name='default_code']" position="attributes">
          <attribute name="string">Part Number</attribute>
          <attribute name="invisible">False</attribute>
        </xpath>
      </field>
    </record>

    <!-- add a searchpanel with product selection -->
    <record id="stock_product_template_search_view_inherit" model="ir.ui.view">
      <field name="name">stock.product.template.search.view.inherit</field>
      <field name="model">product.template</field>
      <field name="inherit_id" ref="product.product_template_search_view" />
      <field name="arch" type="xml">
        <search>
          <searchpanel>
            <field name="categ_id" string="Product Category" icon="fa fa-users" aria-hidden="true" select="multi" enable_counters="1" />
          </searchpanel>
        </search>
      </field>
    </record>

  </data>
</odoo>
