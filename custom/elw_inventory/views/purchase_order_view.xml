<odoo>
    <data>

        <!-- Orders|RFQ -->
        <record id="purchase_purchase_order__kpis_tree_inherit" model="ir.ui.view">
            <field name="name">purchase.purchase.order.kpis.tree.inherit</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_kpis_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="product_id"/>
                    <field name="categ_id" optional="hide"/>
                </xpath>
                <xpath expr="//field[@name='product_id']" position="attributes">
                    <attribute name="string">Part Number/Product</attribute>
                </xpath>
            </field>
        </record>

        <!-- Orders|Purchase Orders -->
        <!--Search panel ValueError: Cannot convert field purchase.order.categ_id to SQL -->
        <!-- Fix by setting store=True on 'categ_id'    -->
        <record id="purchase_purchase_order_view_search_inherit" model="ir.ui.view">
            <field name="name">purchase.purchase.order.view.search.inherit</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_view_search"/>
            <field name="arch" type="xml">
                <search>
                    <searchpanel>
                        <field name="categ_id" string="Product Category" icon="fa fa-users" aria-hidden="true"
                               select="multi" enable_counters="1"/>
                    </searchpanel>
                </search>
            </field>
        </record>

        <!-- Requests for Quotation Search view -->
