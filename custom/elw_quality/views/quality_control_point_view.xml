<odoo>
    <data>
        <record model="ir.ui.view" id="elw_quality_point_tree_view">
            <field name="name">elw.quality.point.tree.view</field>
            <field name="model">elw.quality.point</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="title"/>
                    <field name="product_ids" widget="many2many_tags" optional="show"/>
                    <field name="product_category_ids" widget="many2many_tags" optional="hide"/>
                    <field name="picking_type_ids" widget="many2many_tags" optional="show"/>
                    <field name="measure_on" optional="show"/>
                    <field name="test_type_id" optional="show"/>
                    <field name="team_id" optional="show"/>
                    <field name="user_id" optional="hide" widget="many2one_avatar_user"/>
                    <field name="company_id" groups="base.group_multi_company" optional="show"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="elw_quality_point_kanban_view">
            <field name="name">elw.quality.point.kanban.view</field>
            <field name="model">elw.quality.point</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile">
                    <field name="name"/>
                    <field name="product_ids"/>
                    <field name="picking_type_ids"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                                <div>
                                    <strong>
                                        <t t-esc="record.name.value"/>
                                    </strong>
                                </div>
                                <div>
                                    <strong>Products:</strong>
                                    <t t-esc="record.product_ids.value"/>
                                </div>
                                <div>
                                    <strong>Operations:</strong>
                                    <t t-esc="record.picking_type_ids.value"/>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record model="ir.ui.view" id="elw_quality_point_form_view">
            <field name="name">elw.quality.point.form.view</field>
            <field name="model">elw.quality.point</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_button_box" name="button_box"/>
                        <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                        <h3>
                            <field name="name" readonly="1"/>
                        </h3>

                        <group>
                            <group>
                                <field name="active" invisible="1"/>
                                <field name="company_id" invisible="1"/>
                                <field name="title"/>
                                <field name="product_ids" widget="many2many_tags"/>
                                <field name="product_category_ids" widget="many2many_tags"/>
                                <field name="picking_type_ids" widget="many2many_tags"/>
                                <field name="company_id" groups="base.group_multi_company"/>
                                <field name="user_id"/>
                            </group>
                            <group>
                                <field name="measure_on"/>
                                <field name="measure_frequency_type"/>

                                <label for="measure_frequency_value" invisible="measure_frequency_type != 'random'"
                                       string="Frequency"/>
                                <div invisible="measure_frequency_type != 'random'">
                                    <span>Every</span>
                                    <field name="measure_frequency_value" class="oe_inline"/>
                                    <span>% of Operations</span>
                                </div>
                                <label for="measure_frequency_unit_value"
                                       invisible="measure_frequency_type != 'periodical'" string="Frequency"/>
                                <div invisible="measure_frequency_type != 'periodical'">
                                    <span>Every</span>
                                    <field name="measure_frequency_unit_value" nolable="1" class="oe_inline"/>
                                    <field name="measure_frequency_unit" nolable="1" class="oe_inline"
                                           default='days'/>
                                </div>
                                <field name="test_type" invisible="1"/>
                                <field string="Type" name="test_type_id" options="{'no_open': True, 'no_create': True}"/>
                                <field name="team_id" options="{'no_open': True, 'no_create': True}"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Instructions">
                                <field name="note" placeholder="Describe the quality check to do..."/>
                            </page>
                            <page string="Message If Failure">
                                <field name="note"/>
                            </page>
                            <page string="Notes">
                                <field name="note"
                                       placeholder="Describe why you need to perform this quality check..."/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="elw_quality_control_point_action_window">
            <field name="name">Quality Point</field>
            <field name="res_model">elw.quality.point</field>
            <field name="view_mode">tree,kanban,form</field>
        </record>


    </data>
</odoo>
