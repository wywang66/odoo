<odoo>
    <data>
        <record model="ir.ui.view" id="elw_quality_check_search_view">
            <field name="name">elw.quality.check.search.view</field>
            <field name="model">elw.quality.check</field>
            <field name="arch" type="xml">
                <search>
                    <field name="product_id"/>
                    <field name="picking_id"/>
                    <field name="lot_id" groups="stock.group_production_lot"/>
                    <field name="team_id"/>
                    <filter string="In Progress" name="progress" domain="[('quality_state', '=', 'none')]"/>
                    <filter string="Passed" name="passed" domain="[('quality_state', '=', 'pass')]"/>
                    <filter string="Failed" name="failed" domain="[('quality_state', '=', 'fail')]"/>
                    <separator/>
                    <filter string="Checked Date" name="control_date" date="control_date"/>
                    <group expand="0" string="Group By">
                        <filter string="Status" name="state" context="{'group_by': 'quality_state'}"/>
                        <filter string="Product" name="by_product" context="{'group_by': 'product_id'}"/>
                        <filter string="Control Point" name="groupby_point_id" context="{'group_by': 'point_id'}"/>
                        <filter string="Quality Team" name="groupby_team_id" context="{'group_by': 'team_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.ui.view" id="elw_quality_check_kanban_view">
            <field name="name">elw.quality.check.kanban.view</field>
            <field name="model">elw.quality.check</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_small_column" sample="1">
                    <field name="name"/>
                    <field name="user_id"/>
                    <field name="control_date"/>
                    <field name="product_id"/>
                    <field name="lot_id"/>
                    <field name="quality_state"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                                <div class="row">
                                    <div class="col-6">
                                        <strong>
                                            <span>
                                                <t t-esc="record.name.value"/>
                                            </span>
                                        </strong>
                                    </div>
                                    <div class="col-6">
                                        <strong>
                                            <span t-attf-class="float-end text-end badge #{['none'].indexOf(record.quality_state.raw_value) &gt; -1 ? 'text-bg-secondary' : ['fail'].indexOf(record.quality_state.raw_value) &gt; -1 ? 'text-bg-danger' : ['done'].indexOf(record.quality_state.raw_value) &gt; -1 ? 'text-bg-primary' : 'text-bg-success'}">
                                                <t t-esc="record.quality_state.value"/>
                                            </span>
                                        </strong>
                                    </div>
                                </div>
                                <div class="row text-muted">
                                    <div class="col-8">
                                        <span>
                                            <t t-esc="record.product_id.value"/>
                                        </span>
                                    </div>
                                    <div class="col-4">
                                        <span>
                                            <t t-esc="record.lot_id.value"/>
                                        </span>
                                    </div>
                                </div>
                                <div class="oe_kanban_bottom_right float-end">
                                    <field name="user_id" widget="many2one_avatar_user"/>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record model="ir.ui.view" id="elw_quality_check_tree_view">
            <field name="name">elw.quality.check.tree.view</field>
            <field name="model">elw.quality.check</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="active" optional="hide"/>
                    <field name="name"/>
                    <field name="product_id"/>
                    <field name="picking_id"/>
                    <field name="lot_id"/>
                    <field name="control_date"/>
                    <field name="user_id" widget="many2one_avatar_user"/>
                    <field name="quality_state" widget="badge"
                           decoration-success="quality_state == 'pass'"
                           decoration-info="quality_state =='none'"
                           decoration-danger="quality_state =='fail'"
                    />
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="elw_quality_check_form_view">
            <field name="name">elw.quality.check.form.view</field>
            <field name="model">elw.quality.check</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="test_type" invisible="1"/>
                        <button name="do_pass" type="object" class="btn-primary" invisible="quality_state != 'none'"
                                string="Pass" data-hotkey="q"/>
                        <button name="do_pass" type="object" invisible="quality_state != 'fail'"
                                string="Pass" data-hotkey="q"/>
                        <button name="do_fail" type="object" class="btn-primary" invisible="quality_state != 'none'"
                                string="Fail" data-hotkey="w"/>
                        <button name="do_fail" type="object" invisible="quality_state != 'pass'"
                                string="Fail" data-hotkey="w"/>
                        <button name="do_measure" type="object"
                                invisible="test_type != 'measure' or quality_state != 'none'" string="Measure"
                                data-hotkey="v"/>
                        <button name="do_alert" type="object" invisible="alert_ids or quality_state != 'pass'"
                                string="Create Alert" data-hotkey="g"/>
                        <button name="do_alert" type="object" class="btn-primary"
                                invisible="alert_ids or quality_state != 'fail'" string="Create Alert" data-hotkey="g"/>
                        <field name="quality_state" widget="statusbar" nolabel="1" statusbar_visible="none,pass,fail"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_see_alerts" icon="fa-bell" type="object" class="oe_stat_button"
                                    invisible="alert_count == 0">
                                <field name="alert_count" string="Quality Alerts" widget="statinfo"/>
                            </button>
                        </div>
                        <h3>
                            <field name="name" readonly="1"/>
                        </h3>
                        <group>
                            <group>
                                <field name="product_id"/>
                                <field name="measure_on"/>
                                <field name="control_date"/>
                                <field name="user_id"/>
                                <field name="alert_ids" invisible="quality_state == 'pass'">
                                    <tree delete="0" create="0">
                                        <field name="name"/>
                                        <field name="stage_id"/>
                                    </tree>
                                </field>
                                <!--                                <field name="alert_result" invisible="quality_state == 'pass'"/>-->
                            </group>
                            <group>
                                <field name="picking_id"/>
                                <field name="point_id"/>
                                <field name="test_type_id"/>
                                <field name="team_id"/>
                                <field name="company_id" groups="base.group_multi_company"/>
                                <field name="user_id" string="Control Person" invisible="1"/>
                                <field name="partner_id" invisible="not partner_id"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Notes" name="notes">
                                <group>
                                    <field string="Instructions" name="note"/>
                                    <field string="Notes" name="additional_note" widget="text"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="elw_quality_check_action_window">
            <field name="name">Quality Checks</field>
            <field name="res_model">elw.quality.check</field>
            <field name="view_mode">tree,kanban,form</field>
        </record>
    </data>
</odoo>
