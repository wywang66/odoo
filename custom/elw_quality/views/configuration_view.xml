<odoo>
    <!-- quality.team: search -->
    <record id="quality_team_view_search" model="ir.ui.view">
        <field name="name">quality.team.search</field>
        <field name="model">elw.quality.team</field>
        <field name="arch" type="xml">
            <search string="Search">
                <field string="Team" name="name"/>
                <filter string="Archived" domain="[('active', '=', False)]" name="inactive"/>
            </search>
        </field>
    </record>

    <record id="quality_team_view_tree" model="ir.ui.view">
        <field name="name">quality.team.tree</field>
        <field name="model">elw.quality.team</field>
        <field name="arch" type="xml">
            <tree string="Quality Team">
                <field name="name"/>
                <field name="member_ids" widget="many2many_tags" options="{'color_field': 'color', 'no_create': True}"
                       domain="[('share', '=', False)]"/>
                <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
            </tree>
        </field>
    </record>

    <record id="quality_team_view_kanban" model="ir.ui.view">
        <field name="name">quality.team.view.kanban</field>
        <field name="model">elw.quality.team</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div>
                                <strong>
                                    <field name="name"/>
                                </strong>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="quality_team_kanban" model="ir.ui.view">
        <field name="name">quality.team.kanban</field>
        <field name="model">elw.quality.team</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_dashboard o_quality_kanban" create="0">
                <field name="name"/>
                <field name="check_count"/>
                <field name="alert_count"/>
                <field name="alias_email"/>
                <field name="color"/>
                <templates>
                    <t t-name="kanban-menu">
                        <div t-if="widget.editable" role="menuitem">
                            <a class="dropdown-item ps-0" type="edit">Configuration</a>
                        </div>
                        <div t-if="widget.editable" role="menuitem" aria-haspopup="true"
                             class="o_no_padding_kanban_colorpicker">
                            <ul class="oe_kanban_colorpicker" data-field="color" role="popup"/>
                        </div>
                    </t>
                    <t t-name="kanban-box">
                        <div t-attf-class="#{kanban_color(record.color.raw_value)}">
                            <span class="oe_kanban_color_help"
                                  t-attf-title="In #{kanban_getcolorname(record.color.raw_value)}" role="img"
                                  t-attf-aria-label="In #{kanban_getcolorname(record.color.raw_value)}"/>
                            <div t-attf-class="o_kanban_card_header">
                                <div class="o_kanban_card_header_title">
                                    <div class="o_primary">
                                        <field name="name"/>
                                    </div>
                                    <div t-if="record.alias_email.value">
                                        <small><i class="fa fa-envelope-o" role="img" aria-label="Domain alias"
                                                  title="Domain alias"/>&amp;nbsp;
                                            <field name="alias_id"/>
                                        </small>
                                    </div>
                                </div>
                            </div>
                            <div class="container o_kanban_card_content">
                                <div class="row">
                                    <div class="col-6 o_kanban_primary_left">
                                        <button class="btn btn-primary" name="%(elw_quality_alert_action_window)d"
                                                type="action"
                                                context="{'search_default_inprogress': 1,'search_default_team_id': id}">
                                            <span>
                                                <field name="alert_count"/>
                                                Quality Alerts
                                            </span>
                                        </button>
                                    </div>
                                    <div class="col-6 o_kanban_primary_right">
                                        <a class="oe_kanban_stock_picking_type_list"
                                           name="%(elw_quality_check_action_window)d" type="action"
                                           context="{'search_default_progress': 1,'search_default_team_id': id}">
                                            <field name="check_count"/>
                                            Checks In Progress
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- quality.team: form views -->
    <record id="quality_team_view_form" model="ir.ui.view">
        <field name="name">quality.team.form</field>
        <field name="model">elw.quality.team</field>
        <field name="arch" type="xml">
            <form string="Quality Team">
                <sheet>
                    <div class="oe_title">
                        <label for="name" string="Team Name"/>
                        <h1>
                            <field name="name" placeholder="e.g. Quality Team"/>
                        </h1>
                    </div>
                    <group>
                        <group name="group_alias">
                            <field name="active" invisible="1"/>
                            <field name="member_ids" widget="many2many_tags"
                                   options="{'color_field': 'color', 'no_create': True}"
                                   domain="[('share', '=', False)]"/>
                            <label for="alias_name" string="Email Alias"/>
                            <div name="alias_def">
                                <field name="alias_id" class="oe_read_only oe_inline" string="Email Alias"
                                       required="0"/>
                                <div class="oe_edit_only oe_inline" name="edit_alias" style="display: inline;">
                                    <field name="alias_name" class="oe_inline"/>@
                                    <field name="alias_domain_id" class="oe_inline" placeholder="e.g. domain.com"
                                           options="{'no_create': True, 'no_open': True}"/>
                                </div>
                            </div>
                            <field name="alias_contact" class="oe_inline" groups="base.group_no_one"
                                   string="Accept Emails From"/>
                        </group>
                        <group>
                            <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- quality.team: actions|Configurations| Quality Teams-->
    <record id="elw_quality_team_action" model="ir.actions.act_window">
        <field name="name">Quality Teams</field>
        <field name="res_model">elw.quality.team</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="search_view_id" ref="quality_team_view_search"/>
        <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('quality_team_view_tree')}),
                        (0, 0, {'view_mode': 'kanban', 'view_id': ref('quality_team_view_kanban')})]"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add a quality team
            </p>
        </field>
    </record>

    <!-- quality.team: actions |Overview-->
    <record id="elw_quality_team_overview_action" model="ir.actions.act_window">
        <field name="name">Quality Status by Teams</field>
        <field name="res_model">elw.quality.team</field>
        <field name="view_mode">kanban,form</field>
        <!--        <field name="view_id" ref="quality_team_kanban"/>-->
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add a team in the quality request
            </p>
        </field>
    </record>


    <record id="quality_alert_stage_view_tree" model="ir.ui.view">
        <field name="name">quality.alert.stage.tree</field>
        <field name="model">elw.quality.alert.stage</field>
        <field name="arch" type="xml">
            <tree string="Quality Alert Stage" editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="folded"/>
                <field name="done"/>
                <field name="team_ids" widget="many2many_tags"/>
            </tree>
        </field>
    </record>

    <record id="quality_alert_stage_view_kanban" model="ir.ui.view">
        <field name="name">quality.alert.stage.kanban</field>
        <field name="model">elw.quality.alert.stage</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div>
                                <strong>
                                    <field name="name"/>
                                </strong>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- quality alert stage : actions -->
    <record id="quality_alert_stage_action" model="ir.actions.act_window">
        <field name="name">Stages</field>
        <field name="res_model">elw.quality.alert.stage</field>
        <field name="view_mode">tree,kanban</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add a new stage in the quality alert request
            </p>
        </field>
    </record>

    <!-- elw.quality.reason-->
    <record model="ir.ui.view" id="elw_quality_reason_tree_view">
        <field name="name">elw.quality.reason.tree.view</field>
        <field name="model">elw.quality.reason</field>
        <field name="arch" type="xml">
            <tree string="Quality Reason" editable="bottom">
                <field name="name"/>
                <!--          <field name="color"  widget="color_picker" invisible="1"/>-->
                <!--          <field name="active" invisible="1"/>-->
            </tree>
        </field>
    </record>
    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="elw_quality_reason_action_window">
        <field name="name">Quality Reasons</field>
        <field name="res_model">elw.quality.reason</field>
        <field name="view_mode">tree</field>
    </record>


    <!-- elw.quality.tag-->
    <record model="ir.ui.view" id="elw_quality_tag_tree_view">
        <field name="name">elw.quality.tag.tree.view</field>
        <field name="model">elw.quality.tag</field>
        <field name="arch" type="xml">
            <tree string="Quality Tag" editable="bottom">
                <field name="name"/>
                <!--          <field name="color"  widget="color_picker" invisible="1"/>-->
                <!--          <field name="active" invisible="1"/>-->
            </tree>
        </field>
    </record>
    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="elw_quality_tag_action_window">
        <field name="name">Quality Tags</field>
        <field name="res_model">elw.quality.tag</field>
        <field name="view_mode">tree</field>
    </record>

    <!--elw.quality.test.type-->
    <record model="ir.ui.view" id="quality_test_type_tree_view">
        <field name="name">quality.test.type.tree</field>
        <field name="model">elw.quality.test.type</field>
        <field name="arch" type="xml">
            <tree string="Quality Test Type" editable="bottom">
                <field name="name"/>
                <!--                    <field name="color" widget="color_picker"/>-->
                <!--                    <field name="active" invisible="1" />-->
            </tree>
        </field>
    </record>
    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="quality_test_type_action_window">
        <field name="name">Quality test Type</field>
        <field name="res_model">elw.quality.test.type</field>
        <field name="view_mode">tree</field>
    </record>

</odoo>