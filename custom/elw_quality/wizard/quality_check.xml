<odoo>
    <data>
        <record model="ir.ui.view" id="qa_quality_check_wizard_form_view">
            <field name="name">qa.quality.check.wizard.form.view</field>
            <field name="model">elw.quality.check.wizard</field>
            <field name="arch" type="xml">
                <form string="Quality Check Wizard">
                    <group>
<!--                        <field name="check_ids" widget="many2many_tags"/>-->
<!--                        <field name="product_ids" widget="many2many_tags"/>-->
                        <field name="product_id" />
                        <field name="picking_id"/>
                        <field name="quality_state"/>
                    </group>
                    <footer>
                        <button string="OK" class="btn-primary" special="cancel" data-hotkey="x"/>
                    </footer>
                </form>
            </field>
        </record>


        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="qa_quality_check_wizard_action_window">
            <field name="name">Quality Check</field>
            <field name="res_model">elw.quality.check.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>


    </data>
</odoo>