<odoo>
    <data>
        <!-- elw.quality.point tree view-->
        <record id="elw_quality_point_tree_view_inherit_elw_mrp" model="ir.ui.view">
            <field name="name">elw.quality.point.tree.view.inherit.elw.mrp</field>
            <field name="model">elw.quality.point</field>
            <field name="inherit_id" ref="elw_quality.elw_quality_point_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='picking_type_ids']" position="after">
                    <field name="operation_id" column_invisible="context.get('active_model') != 'mrp.routing.workcenter'"/>
                </xpath>
            </field>
        </record>

        <record id="elw_quality_point_search_view_inherit_elw_mrp" model="ir.ui.view">
            <field name="name">elw.quality.point.search.view.inherit.elw.mrp</field>
            <field name="model">elw.quality.point</field>
            <field name="inherit_id" ref="elw_quality.elw_quality_point_search_view"/>
            <field name="arch" type="xml">
                <filter name="inactive" position="after">
                    <separator/>
                    <filter string="Quality Points" name="quality_points" domain="[('operation_id', '=', False)]"/>
                    <filter string="Manufacturing Steps" name="manufacturing_steps" domain="[('operation_id', '!=', False)]"/>
                </filter>
            </field>
        </record>

        <record id="elw_quality_point_form_view_inherit_elw_mrp" model="ir.ui.view">
            <field name="name">elw.quality.point.form.view.inherit.elw.mrp</field>
            <field name="model">elw.quality.point</field>
            <field name="inherit_id" ref="elw_quality.elw_quality_point_form_view"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='test_type_id']" position="attributes">
                        <attribute name="domain">test_type_id_domain</attribute>
                    </xpath>
                    <field name="test_type_id" position="after">
                        <field name="test_type_id_domain" invisible="1"/>
                        <field name="component_id_domain" invisible="1"/>
                        <field name="component_id" invisible="test_type_id != 6 or not operation_id or not is_workorder_step" domain="component_id_domain"/>
                        <field name="test_report_type" invisible="test_type_id != 7 or not operation_id or not is_workorder_step"/>
                    </field>
                    <field name="picking_type_ids" position="after">
                        <field string="Work Order Operation" name="operation_id" invisible="not is_workorder_step" groups="mrp.group_mrp_routings"
                               options="{'no_create': True}"/>
                        <field name="is_workorder_step" invisible="1"/>
                    </field>
                    <field name="user_id" position="after">
                        <field name="operation_id" invisible="0"/>
<!--                        <field name="source_document" widget="radio" invisible="not operation_id"/>-->
<!--                        <field name="worksheet_page" invisible="not is_workorder_step or not operation_id or source_document == 'step'"/>-->
                    </field>
                    <field name="product_category_ids" position="attributes">
                        <attribute name="invisible">is_workorder_step and operation_id</attribute>
                    </field>
<!--                    <xpath expr="//field[@name='note']" position="after">-->
<!--                        <field name="worksheet_document" help="Upload your PDF file." widget="pdf_viewer" invisible="source_document == 'operation'"/>-->
<!--                        <field name="worksheet_url" placeholder="Google Slide Link" widget="embed_viewer" invisible="source_document == 'operation'"/>-->
<!--                    </xpath>-->
                </data>
            </field>
        </record>

        <record model="ir.actions.act_window" id="elw_quality.elw_quality_control_point_action_window">
            <field name="context">{'search_default_quality_points': 1}</field>
        </record>

        <record model="ir.actions.act_window" id="elw_quality_control_point_action_window_mrp">
            <field name="name">Steps</field>
            <field name="res_model">elw.quality.point</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>
