<odoo>
    <record id="elw_eq_calibration_stage_view_tree" model="ir.ui.view">
        <field name="name">elw.eq.calibration.stage.tree</field>
        <field name="model">elw.calibration.stage</field>
        <field name="arch" type="xml">
            <tree string="Calibration Stage" editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="done" readonly="1"/>
            </tree>
        </field>
    </record>

    <record id="elw_eq_calibration_stage_view_kanban" model="ir.ui.view">
        <field name="name">elw.eq.calibration.stage.kanban</field>
        <field name="model">elw.calibration.stage</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div>
                                <strong>
                                    <field name="name"/>
                                    <field name="done" readonly="1"/>
                                </strong>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- quality alert stage : actions -->
    <record id="elw_eq_calibration_stage_action" model="ir.actions.act_window">
        <field name="name">Calibration Stages</field>
        <field name="res_model">elw.calibration.stage</field>
        <field name="view_mode">tree,kanban</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add a new calibration stage
            </p>
        </field>
    </record>
</odoo>