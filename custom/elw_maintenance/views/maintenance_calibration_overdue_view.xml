<odoo>
    <data>
        <!-- elw.maintenance.calibration: search views -->
        <record id="elw_calibration_overdue_view_search" model="ir.ui.view">
            <field name="name">equipment.calibration.overdue.request.search</field>
            <field name="model">elw.calibration.overdue</field>
            <field name="arch" type="xml">
                <search string="Calibration Overdue Request Search">
                    <field name="name" string="Request"/>
                </search>
            </field>
        </record>


        <record model="ir.ui.view" id="elw_calibration_overdue_tree_view">
            <field name="name">elw_calibration_overdue_tree_view</field>
            <field name="model">elw.calibration.overdue</field>
            <field name="arch" type="xml">
                <tree string="Calibration Request" multi_edit="1" sample="1">
                    <field name="name"/>
                    <!--                    <field name="equipment_id" optional="show"/>-->
                    <!--                    <field name="request_date" groups="base.group_no_one"/>-->
                    <!--                    <field name="owner_user_id" optional="show"/>-->
                    <!--                    <field name="category_id" optional="show"/>-->
                    <!--                    <field name="stage_id" decoration-success="stage_id == 3"-->
                    <!--                           decoration-info="stage_id in (1,2)"-->
                    <!--                           decoration-warning="stage_id == 5"-->
                    <!--                           decoration-danger="stage_id == 4" widget="badge" optional="show"/>-->
                    <!--                    <field name="technician_doing_calibration_id" optional="hide" widget="many2one_avatar_user"/>-->
                    <!--                    <field name="company_id" optional="hide"/>-->

                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="elw_calibration_overdue_form_view">
            <field name="name">elw_calibration_overdue_form_view</field>
            <field name="model">elw.calibration.overdue</field>
            <field name="arch" type="xml">
                <form string="Calibration Request">
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="not archive"/>
                    <header>
                        <field name="stage_id" widget="statusbar"/>
                        <button string="Doing" name="action_doing_calibration" type="object" class="btn-primary"
                                invisible="stage_id != 1"/>
                        <button string="Passed" name="action_passed_calibration" type="object" class="btn-primary"
                                invisible="stage_id != 2 or stage_id == 5"/>
                        <button string="Failed" name="action_failed_calibration" type="object" class="btn-primary"
                                invisible="stage_id != 2 or stage_id == 5"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_see_calibration" icon="fa-bell" type="object"
                                    class="oe_stat_button text-danger"
                                    invisible="done" string="Calibration">
                            </button>
                            <button name="action_see_calibration" icon="fa-bell" type="object"
                                    class="oe_stat_button text-success"
                                    invisible="not done" string="Calibration">
                            </button>
                        </div>
                        <div class="oe_title">
                            <label for="name" string="Request"/>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="archive" invisible="1"/>
                                <field name="calibration_id"/>
                                <field name="ori_stage_id" options="{'no_create': True}"/>
                                <field name="owner_user_id" string="Requested By" invisible="1"/>
                                <field name="equipment_id"/>
                                <field name="category_id"/>
                                <field name="request_date" readonly="True"/>
                                <field name="calibration_due_date" />
                                <field name="done" invisible="1"/>
                                <field name="company_id" invisible="1"/>
                            </group>
                            <group>
                                <field name="owner_user_id"/>
                                <field name="maintenance_team_id" options="{'no_create': True, 'no_open': True}"/>
                                <label for="repeat_interval"/>
                                <div class="d-flex">
                                    <field name="repeat_interval" required="True" class="me-2"
                                           style="max-width: 2rem !important;"/>
                                    <field name="repeat_unit" required="True" class="me-2"
                                           style="max-width: 6rem !important;"/>
                                </div>
                                <field name="priority" widget="priority"/>
                                <field name="is_calibration_overdue" invisible="1"/>
                                <field name="calibration_completion_date" required="stage_id in (2,3,4)"/>
                                <field name="technician_doing_calibration_id" required="stage_id in (2,3,4)"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Notes">
                                <field name='description' placeholder="Please refer to above link"/>
                            </page>
                            <page string="Instructions">
                                <field name='description' placeholder="Please refer to above link"/>
                                <group col="1">
                                    <field name="instruction_type" widget="radio" nolabel="1"/>
                                    <field name="instruction_pdf" help="Upload your PDF file." widget="pdf_viewer"
                                           invisible="instruction_type != 'pdf'" required="instruction_type == 'pdf'"
                                           nolabel="1"/>
                                    <field name="instruction_google_slide" placeholder="Google Slide Link"
                                           widget="embed_viewer" invisible="instruction_type != 'google_slide'"
                                           required="instruction_type == 'google_slide'" nolabel="1"/>
                                    <field name="instruction_text" placeholder="Your instructions"
                                           invisible="instruction_type != 'text'" nolabel="1"/>
                                </group>
                            </page>
                            <page string="Reason for Calibration Overdue">
                                <field name='reason_for_overdue'
                                       placeholder="Write down reasons for calibration overdue"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="elw_equipment_calibration_overdue_action">
            <field name="name">Equipment Calibration Overdue</field>
            <field name="res_model">elw.calibration.overdue</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_active': True, 'default_user_id': uid}</field>
            <!--            <field name="target">new</field>-->
        </record>

    </data>
</odoo>