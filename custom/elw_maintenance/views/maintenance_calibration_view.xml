<odoo>
    <data>
        <!-- elw.maintenance.calibration: search views -->
        <record id="elw_maintenance_calibration_view_search" model="ir.ui.view">
            <field name="name">equipment.calibration.request.search</field>
            <field name="model">elw.maintenance.calibration</field>
            <field name="arch" type="xml">
                <search string="Calibration Request Search">
                    <field name="name" string="Request"/>
                    <field name="category_id"/>
                    <field name="stage_id"/>
                    <field name="owner_user_id"/>
                    <field name="equipment_id"/>
                    <field name="owner_user_id"/>
                    <field name="maintenance_team_id"/>
                    <field name="calibration_completion_date"/>
                    <field name="priority"/>
                    <filter string="My Calibration" name="my_calibrations" domain="[('owner_user_id', '=', uid)]"/>
                    <separator/>
                    <filter string="To Do" name="todo" domain="[('stage_id.done', '=', False)]"/>
                    <filter string="Done" name="done" domain="[('stage_id.done', '=', True)]"/>
                    <filter string="Failed" name="fail" domain="[('stage_id', '=', 4)]"/>
                    <separator/>
                    <filter string="High Priority" name="high_priority"
                            domain="[('stage_id.done', '=', False), ('priority', '=', '3')]"/>
                    <separator/>
                    <filter name="filter_request_date" date="request_date"/>
                    <filter name="filter_calibration_date" date="calibration_due_date"/>
                    <filter name="filter_close_date" date="calibration_completion_date"/>
                    <separator/>
                    <filter string="Active" name="active" domain="[('archive', '=', False)]"/>
                    <filter string="Archived" name="inactive" domain="[('archive', '=', True)]"/>
                    <group expand='0' string='Group by...'>
                        <filter string='Assigned to' name="assigned" domain="[]"
                                context="{'group_by': 'technician_doing_calibration_id'}"/>
                        <filter string='Category' name="category" domain="[]" context="{'group_by' : 'category_id'}"/>
                        <filter string='Stage' name="stages" domain="[]" context="{'group_by' : 'stage_id'}"/>
                        <filter string='Created By' name='created_by' domain="[]"
                                context="{'group_by': 'owner_user_id'}"/>
                    </group>
                </search>
            </field>
        </record>


        <record model="ir.ui.view" id="elw_maintenance_calibration_tree_view">
            <field name="name">elw_maintenance_calibration_tree_view</field>
            <field name="model">elw.maintenance.calibration</field>
            <field name="arch" type="xml">
                <tree string="Calibration Request" multi_edit="1" sample="1">
                    <field name="name"/>
                    <field name="equipment_id" optional="show"/>
                    <field name="request_date" groups="base.group_no_one"/>
                    <field name="calibration_due_date"/>
                    <field name="stage_id" decoration-success="stage_id == 3"
                           decoration-info="stage_id == 1"
                           decoration-warning="stage_id ==2"
                           decoration-danger="stage_id == 4" widget="badge" optional="show"/>
                    <field name="technician_doing_calibration_id" optional="show" widget="many2one_avatar_user"/>
                    <field name="company_id" optional="hide"/>
                    <field name="owner_user_id" optional="show" widget="many2one_avatar_user"/>
                    <field name="category_id" optional="show"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="elw_maintenance_calibration_form_view">
            <field name="name">elw_maintenance_calibration_form_view</field>
            <field name="model">elw.maintenance.calibration</field>
            <field name="arch" type="xml">
                <form string="Calibration Request">
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="not archive"/>
                    <header>
                        <!--                        <button string="Archive" name="archive_calibration_request"-->
                        <!--                                help="Archive is to hide the calibration request without deleting it."-->
                        <!--                                type="object" invisible="archive"/>-->
                        <!--                        <button string="Reopen Request" name="reset_calibration_request" type="object"-->
                        <!--                                help="This is to hide the calibration request without deleting it."-->
                        <!--                                invisible="not archive"/>-->
                        <!-- remove options="{'clickable': '1'} so it is not clickable -->
                        <field name="stage_id" widget="statusbar"/>
                        <button string="Doing" name="action_doing_calibration" type="object" class="btn-primary" invisible="stage_id != 1"/>
                        <button string="Passed" name="action_passed_calibration" type="object" class="btn-primary"
                                invisible="stage_id != 2 or stage_id == 5"/>
                        <button string="Failed" name="action_failed_calibration" type="object" class="btn-primary"
                                invisible="stage_id != 2 or stage_id == 5"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_see_new_calibration_request" icon="fa-pencil-square-o" type="object" class="oe_stat_button"
                                    invisible="not duplicate_id" >
                                    <field name="duplicate_id" invisible="not duplicate_id" widget="statinfo" string="Created a New Calibration Request"/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <label for="name" string="Request"/>
                            <h3><field name="name"/></h3>
                        </div>
                        <group>
                            <group>
                                <field name="archive" invisible="1"/>
                                <field name="owner_user_id" string="Requested By" invisible="1"/>
                                <field name="equipment_id" context="{'default_company_id':company_id, 'default_category_id':category_id}" readonly = "archive"/>
                                <field name="category_id" context="{'default_company_id':company_id}" invisible="not equipment_id"/>
                                <field name="request_date" readonly="True"/>
                                <field name="done" invisible="1"/>
                                <field name="calibration_due_date" force_save="1"/>
                                <field name="technician_doing_calibration_id" required="stage_id in (2,3,4)" readonly = "archive"/>
                                <field name="company_id" invisible="1"/>
                                <field name="duplicate_id" invisible="1"/>
                                <field name="calibration_completion_date" invisible="not stage_id in (2,3,4)" required="stage_id in (2,3,4)" readonly = "archive"/>
                            </group>
                            <group>
                                <field name="owner_user_id"/>
                                <field name="maintenance_team_id" options="{'no_create': True, 'no_open': True}" readonly = "archive"/>
                                <label for="repeat_interval"/>
                                <div class="d-flex">
                                    <field name="repeat_interval" required="True" class="me-2" style="max-width: 2rem !important;" readonly = "archive"/>
                                    <field name="repeat_unit" required="True" class="me-2" style="max-width: 6rem !important;" readonly = "archive"/>
                                </div>
                                <label for="sending_email_notification_days_ahead"/>
                                <div class="d-flex">
                                    <field name="sending_email_notification_days_ahead" class="me-2" style="max-width: 2rem !important;"/>
                                    <span class="oe_inline">days before calibration due date</span>
                                </div>
                                <label for="send_email_date"/>
                                <div>
                                    <field name="send_email_date" force_save="1" class="me-2" style="max-width: 8rem !important;"/>
                                    <button name="action_send_notification_email_now" icon="fa-solid fa-envelope" type="object" class="oe_stat_button oe_inline"
                                            invisible="not send_email_date" string="Send Email Manually"/>
                                </div>
                                <field name="priority" widget="priority"/>
                                <field name="is_calibration_overdue" invisible="0"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Notes">
                                <field name='description' placeholder="Internal Notes"/>
                            </page>
                            <page string="Instructions">
                                <group col="1">
                                    <field name="instruction_type" widget="radio" nolabel="1"/>
                                    <field name="instruction_pdf" help="Upload your PDF file." widget="pdf_viewer" invisible="instruction_type != 'pdf'"
                                           required="instruction_type == 'pdf'" nolabel="1"/>
                                    <field name="instruction_google_slide" placeholder="Google Slide Link"
                                           widget="embed_viewer" invisible="instruction_type != 'google_slide'"
                                           required="instruction_type == 'google_slide'" nolabel="1"/>
                                    <field name="instruction_text" placeholder="Your instructions" invisible="instruction_type != 'text'" nolabel="1"/>
                                </group>
                            </page>
                            <page string="Reason for Calibration Overdue">
                                <field name='reason_for_overdue' placeholder="Write down reasons for calibration overdue"
                                       required="is_calibration_overdue"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="elw_equipment_calibration_action">
            <field name="name">Equipment Calibration</field>
            <field name="res_model">elw.maintenance.calibration</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_active': True, 'default_user_id': uid}</field>
            <!--            <field name="target">new</field>-->
        </record>

        <!-- below changes 'Equipment' to 'Equipment Info' -->
        <!--        <record id="maintenance.menu_equipment_form" model="ir.ui.menu">-->
        <!--            <field name="name">Equipment and Calibration</field>-->
        <!--        </record>-->

        <menuitem id="menu_equipment_calibration"
                  name="Calibration"
                  parent="maintenance.menu_maintenance_title"
                  action="elw_equipment_calibration_action"
                  groups="base.group_user"
                  sequence="4"/>

        <menuitem id="menu_calibration_submenu"
                  name="Calibration"
                  action="elw_equipment_calibration_action"
                  parent="menu_equipment_calibration"
                  sequence="1"/>

        <menuitem id="menu_calibration_stages_submenu"
                  name="Calibration Stages"
                  action="elw_eq_calibration_stage_action"
                  parent="maintenance.menu_maintenance_configuration"
                  sequence="4"/>

    </data>
</odoo>