<odoo>
    <data>

        <!-- change root menu -->
        <record id="stock.menu_stock_root" model="ir.ui.menu">
            <field name="name">Inventory Management</field>
        </record>

        <!-- File path :\stock\views\stock_picking_type_views.xml -->
        <!-- so object is stock -->
        <record id="stock.stock_picking_type_action" model="ir.actions.act_window">
            <field name="name">Inventory Management Overview</field>
        </record>

        <!-- Stock.picking change Contact to Receive From and more -->
        <record id="stock_picking_tree_inherit" model="ir.ui.view">
            <field name="name">stock.picking.tree.inherit</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.vpicktree"/>
            <field name="arch" type="xml">
                <!-- the original is applicable to inventory IN and OUT -->
                <!-- <xpath expr="//field[@name='partner_id']" position="attributes">
                  <attribute name="string">Receive From</attribute>
                </xpath> -->
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="product_id"/>
                    <field name="categ_id"/>
                </xpath>
                <xpath expr="//field[@name='product_id']" position="attributes">
                    <attribute name="string">Part Number/Product</attribute>
                </xpath>
            </field>
        </record>

        <!-- Stock.picking change Contact to Supplier -->
        <record id="stock_view_picking_form_inherit" model="ir.ui.view">
            <field name="name">stock.view.picking.form.inherit</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='backorder_id']" position="after">

                    <field name="qa_check_product_ids" widget="many2many_tags" />
                    <field name="check_ids" widget="many2many_tags" invisible="1"/>
                    <field name="quality_check_fail" invisible="1"/>
                    <field name="quality_state" invisible="1"/>
<!--                    <div>-->
                        <field name="is_all_quality_fails_resolved" invisible="not check_ids"
                               style="margin-bottom:20px;"/>

                        <!--avoid the overlapping with  fields in the 2nd group-->
                        <field name="quality_check_ids" invisible="1">
                                                           style="width:600px; margin-top:100px;">
                            <!--  make it to be no deletable and no creatable-->
                            <tree delete="0" create="0">
                                <field name="product_id"/>
                                <field name="name"/>
                                <field name="quality_state"/>
                                <field name="alert_ids" widget="many2many_tags"/>
                                <field name="alert_result"/>
                            </tree>
                        </field>
<!--                    </div>-->
                    <field name="quality_alert_ids" invisible="1" readonly="1">
                        <tree>
                            <field name="name"/>
                            <field name="stage_id"/>
                        </tree>
                    </field>
                </xpath>
                <xpath expr="//button[@name='button_validate']" position="after">
                    <button name="action_quality_check"
                            invisible="not qa_check_product_ids or quality_check_fail or quality_state == 'pass'"
                            string="Quality Check" type="object" class="oe_highlight"/>
                    <!-- use same action_quality_check got "Create Alert" as Alert is created via Quality Check-->
<!--                    <button name="action_quality_check" type="object" class="btn-primary"-->
<!--                            invisible="not quality_check_fail or quality_alert_ids" string="Create Alert"-->
<!--                            data-hotkey="g"/>-->
                </xpath>
                <xpath expr="//field[@name='origin']" position="after">
                    <field name="picking_type_code"/>
                </xpath>
                <xpath expr="//field[@name='move_ids_without_package']/tree/field[@name='product_id']"
                       position="after">
                    <field name="categ_id" optional="hide"/>
                </xpath>

                <xpath expr="//field[@name='product_id']" position="attributes">
                    <attribute name="string">Part Number/Product</attribute>
                </xpath>
                <xpath expr="//button[@name='action_view_stock_valuation_layers']" position="after">
                    <div name="button_box" position="inside">
                        <button name="open_quality_alert_picking" type="object"
                                class="oe_stat_button" icon="fa-bell" invisible="quality_alert_count == 0">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">
                                    <field name="quality_alert_count"/>
                                </span>
                                <span class="o_stat_text">Quality Alert</span>
                            </div>
                        </button>
                        <button name="action_open_quality_check_picking"
                                invisible="not qa_check_product_ids or quality_check_fail or quality_state == 'pass'" type="object"
                                class="oe_stat_button" icon="fa-check">
                            <span class="o_stat_text">Quality Checks</span>
                        </button>
                        <button name="action_open_quality_check_picking"
                                invisible="not check_ids or quality_check_fail or quality_state != 'pass'" type="object"
                                class="oe_stat_button text-success" icon="fa-check">
                            <span class="o_stat_text text-success">Quality Checks</span>
                        </button>
                        <button name="action_open_quality_check_picking"
                                invisible="not check_ids or not quality_check_fail" type="object"
                                class="oe_stat_button text-danger" icon="fa-check">
                            <span class="o_stat_text text-danger">Quality Checks</span>
                        </button>
                    </div>
                </xpath>
            </field>
        </record>

        <record id="stock_view_picking_internal_search_inherit" model="ir.ui.view">
            <field name="name">stock.view.picking.internal.search.inherit</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_internal_search"/>
            <field name="arch" type="xml">
                <search>
                    <searchpanel>
                        <field name="categ_id" string="Product Category" icon="fa fa-users" aria-hidden="true"
                               select="multi" enable_counters="1"/>
                    </searchpanel>
                </search>
            </field>
        </record>
    </data>
</odoo>