        <!--            <field name="sequence">305</field>-->
        <!--            <field name="visible" eval="0" />-->
        <!--        </record>-->

        <!--category_id, do not need to add ELW in  odoo/addons/base/data/ir_module_category_data.xml with elw_module_security_data. ELW is added-->
<!--        <record model="ir.module.category" id="module_category_elw">-->
