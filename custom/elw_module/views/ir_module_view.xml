<odoo>
    <data>

        <!-- display installed and uninstalled modules -->
        <record id="base_view_view_search_inherit" model="ir.ui.view">
            <field name="name">base.view.view.search.inherit</field>
            <field name="model">ir.module.module</field>
            <field name="inherit_id" ref="base.view_module_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='app']" position="attributes">
                    <attribute name="domain">[('application', '=', True), ('state', 'in', ['installed',
                        'to upgrade', 'to remove', 'uninstalled', 'to install'])]
                    </attribute>
                </xpath>
            </field>
        </record>

        <!-- inherit data file from odoo/base/data but below does not work, even commenting this section from original xml -->
        <!-- https://www.odoo.com/forum/help-1/how-to-inherit-data-file-in-odoo-225213-->
