        <!-- below make module_type (above 'category_id') on UI left search panel invisible -->
        <record model="ir.ui.view" id="view_module_filter_apps_inherit_inherit">
            <field name="name">Search Data Modules</field>
            <field name="model">ir.module.module</field>
            <field name="inherit_id" ref="base.view_module_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//searchpanel/field[@name='module_type']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>

        <!-- comment author and website from 'module info' of module tooltip -->
        <record id="base_module_form_elw_inherit" model="ir.ui.view">
            <field name="name">base.module.form.inherit</field>
            <field name="model">ir.module.module</field>
            <field name="inherit_id" ref="base.module_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='author']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='website']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>

        <!-- comment author and website main page tree view -->
        <record id="base_module_tree_elw_inherit" model="ir.ui.view">
            <field name="name">base.module.tree.inherit</field>
            <field name="model">ir.module.module</field>
            <field name="inherit_id" ref="base.module_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='author']" position="attributes">
                    <attribute name="optional">"hide"</attribute>
                </xpath>
                <xpath expr="//field[@name='website']" position="attributes">
                    <attribute name="optional">"hide"</attribute>
                </xpath>
            </field>
        </record>

        <!-- make 'Learn More' buttons invisible in main UI  -->
        <!-- make 'Module Info' buttons invisible in main UI kanban  -->
        <record id="base_module_kanban_elw_inherit" model="ir.ui.view">
            <field name="name">base.module.kanban.inherit</field>
            <field name="model">ir.module.module</field>
            <field name="inherit_id" ref="base.module_view_kanban"/>
            <field name="arch" type="xml">
                <xpath expr="//kanban/templates/t/a[2]" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//kanban/templates/t[2]/div/div[2]/div/a[1]" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//kanban/templates/t[2]/div/div[2]/div/a[2]" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>

        <!-- make 'website_sale' invisible in main UI  -->
        <!-- inherit of act_window -->
        <record id="base.open_module_tree" model="ir.actions.act_window">
            <field name="domain">[('application','=', True),('name', 'not in',
                ('web_studio','account_accountant','knowledge','timesheet_grid','industry_fsm',
                'sign', 'helpdesk','quality_control', 'sale_subscription', 'planning', 'mrp_plm',
                'social', 'hr_appraisal', 'marketing_automation','appointment', 'web_mobile',
                'stock_barcode','sale_amazon','sale_ebay', 'voip', 'mrp_workorder',
                'pos_restaurant','mass_mailing', 'website','website_event','mass_mailing_sms',
                'fleet','website_sale','point_of_sale','data_recycle','survey'))]
            </field>
        </record>

    </data>
</odoo>
